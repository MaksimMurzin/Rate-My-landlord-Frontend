FROM node:20-alpine
WORKDIR /app

# 1. Install global CLI (useful for the 'ng' command)
RUN npm install -g @angular/cli

# 2. Copy only package files first
COPY package*.json ./

# 3. Install dependencies inside the container
# This ensures binaries match the Linux OS of the container
RUN npm install

# 4. Copy everything else (including angular.json)
COPY . .

# 5. Expose port
EXPOSE 4200

# 6. Use 'npx' to ensure we use the local workspace CLI
CMD ["npx", "ng", "serve", "--host", "0.0.0.0", "--poll", "2000"]
